# Core (Required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Moltbook (Optional)
MOLTBOOK_API_KEY=your_moltbook_api_key_here
MOLTBOOK_API_URL=https://api.moltbook.com

# Weather (Optional - get free key from openweathermap.org)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# News (Optional - get free key from newsapi.org)
NEWS_API_KEY=your_news_api_key_here

# Search (Optional - get key from serper.dev or leave blank for DuckDuckGo)
SERPER_API_KEY=your_serper_api_key_here

# Database
DATABASE_FILE=pyclaw.db

# Bot Settings
MAX_CONVERSATION_HISTORY=10
DEFAULT_AGENT=friendly

# Feature Flags (set to 'false' to disable)
ENABLE_MODERATION=true
ENABLE_WEATHER=true
ENABLE_NEWS=true
ENABLE_SEARCH=true
ENABLE_GAMES=true
ENABLE_MOLTBOOK=true
